<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MeetupGroupDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/groupImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/avatar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >
            <ImageView
                android:id="@+id/meetupLogo"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignTop="@+id/groupName"
                android:layout_toLeftOf="@+id/groupName"
                android:layout_toStartOf="@+id/groupName"
                android:src="@drawable/meetuplogo"/>
            <TextView
                android:id="@+id/groupName"
                android:maxWidth="275dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/group_name" />
            <TextView
                android:id="@+id/numOfMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupName"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"
                android:text="@string/member_num"/>
            <TextView
                android:id="@+id/groupDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numOfMembers"
                android:layout_marginTop="10dp"
                android:text="@string/group_description" />
        </RelativeLayout>


    </LinearLayout>
</FrameLayout>
